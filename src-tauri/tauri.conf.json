{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "package": {
    "productName": "UniversitySchedule",
    "version": "0.1.0"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.uni.schedule",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "University Schedule",
        "width": 400,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}